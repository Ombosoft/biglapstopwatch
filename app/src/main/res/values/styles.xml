<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.biglapstopwatch.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">200dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">90sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.biglapstopwatch.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">100dp</item>
        <item name="android:textSize">40sp</item>
        <item name="cornerRadius">20dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">40dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="Widget.biglapstopwatch.TextView.Total" parent="Widget.biglapstopwatch.TextView"></style>

    <style name="Widget.biglapstopwatch.TextView.Lap" parent="Widget.biglapstopwatch.TextView">
        <item name="android:textColor">@color/green_50</item>
    </style>
</resources>